// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Warehouse {
  id          Int     @id @default(autoincrement())
  name        String
  description String?
  ubication   String

  Products Products[]
}

model Products {
  id          Int      @id @default(autoincrement())
  date        DateTime @default(now())
  name        String
  description String?
  quantity    Float
  buyPrice    Float
  sellPrice   Float

  Warehouse   Warehouse? @relation(fields: [warehouseId], references: [id])
  warehouseId Int?
}
