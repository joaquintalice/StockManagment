// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Warehouse {
  id          Int     @id @default(autoincrement())
  name        String
  description String?
  ubication   String

  Products Products[]
}

model Products {
  id        Int      @id @default(autoincrement())
  date      DateTime @default(now())
  name      String   @unique
  quantity  Float
  buyPrice  Float
  sellPrice Float
  updatedAt DateTime @default(now()) @updatedAt

  Warehouse             Warehouse?           @relation(fields: [warehouseId], references: [id])
  warehouseId           Int?
  StockMovementDetail   StockMovementDetail? @relation(fields: [stockMovementDetailId], references: [id])
  stockMovementDetailId Int?
}

model StockMovement {
  id    Int      @id @default(autoincrement())
  date  DateTime @default(now())
  total Float

  stockMovementDetail StockMovementDetail[]
  CashBox             CashBox?              @relation(fields: [cashBoxId], references: [id])
  cashBoxId           Int?
}

model StockMovementDetail {
  id              Int  @id @default(autoincrement())
  prodId          Int
  stockMovementId Int?

  articles      Products[]
  StockMovement StockMovement? @relation(fields: [stockMovementId], references: [id])
}

model CashBox {
  id          Int      @id @default(autoincrement())
  name        String   @unique
  amount      Float
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @default(now()) @updatedAt

  StockMovement StockMovement[]
}

model CashboxHistory {
  id    Int      @id @default(autoincrement())
  date  DateTime @default(now())
  total Float
}
